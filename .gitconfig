[core]
	excludesfile = "~/.gitignore"
[user]
	email = "tylerwhall@gmail.com"
[merge]
	tool = gvimdiff
	conflictstyle = diff3
        renamelimit = 99999
[color]
	diff = true
	status = auto
[alias]
	dns = diff --name-status
	uncommit = reset HEAD^
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	ctags = !git ls-files | ctags -L -
	lxk = config --global user.email tyhall@lexmark.com
	nolxk = config --global user.email tylerwhall@gmail.com
[rerere]
	enabled = 1
[receive]
	denyCurrentBranch = warn
[apply]
	whitespace = fix
